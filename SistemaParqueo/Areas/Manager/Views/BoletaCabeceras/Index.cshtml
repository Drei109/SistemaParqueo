@model IEnumerable<SistemaParqueo.Models.BoletaCabecera>

@{
    ViewBag.Title = "Boleta";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="m-portlet ">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text m--font-bold">
                            Boletas
                        </h3>
                    </div>
                </div>
            </div>
            <div class="m-portlet__body m--margin-bottom-5">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-5 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control " placeholder="Buscar" id="generalSearch">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span>
                                                <i class="la la-search"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="col-xl-4 order-1 order-xl-2 m--align-right">
                            <a href="/Admin/Empresas/Create" class="btn btn-warning m-btn m-btn--custom m-btn--icon m-btn--air ">
                                <span>
                                    <i class="flaticon-add-circular-button"></i>
                                    <span>
                                        Nueva Empresa
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>*@
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <table class="m-datatable" id="html_table" style="width: 100%">
                    <thead>
                        <tr>
                            <th title="Field #1">Cliente</th>
                            <th title="Field #2">Fecha</th>
                            <th title="Field #3">Estado</th>
                            <th title="Field #4">Subtotal</th>
                            <th title="Field #5">Total</th>
                            <th title="Field #6"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Cliente.Nombre @item.Cliente.Apellido </td>
                                <td>@item.Fecha</td>
                                <td>@item.Estado</td>
                                <td>@item.Subtotal</td>
                                <td>@item.Total</td>
                                <td>
                                    @Html.ActionLink("Detalles", "Details", new { id = item.BoletaCabeceraId }, new { @class = "btn m-btn--square  btn-outline-warning m-btn m-btn--outline-2x" })
                                    @*@Html.ActionLink("Detalles", "Details", new { id = item.CocheraId }, new { @class = "btn m-btn--square  btn-outline-info m-btn m-btn--outline-2x" })*@
                                    @*@Html.ActionLink("Eliminar", "Delete", new { id = item.CocheraId }, new { @class = "btn m-btn--square  btn-outline-danger m-btn m-btn--outline-2x" })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
</div>
